<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <Made_S3>1.0.0</Made_S3>
    </modules>
    <global>
        <models>
            <made_s3>
                <class>Made_S3_Model</class>
            </made_s3>
            <cms>
                <rewrite>
                    <wysiwyg_images_storage>Made_S3_Model_Cms_Wysiwyg_Images_Storage</wysiwyg_images_storage>
                </rewrite>
            </cms>
        </models>
        <blocks>
            <made_s3>
                <class>Made_S3_Block</class>
            </made_s3>
        </blocks>
        <helpers>
            <made_s3>
                <class>Made_S3_Helper</class>
            </made_s3>
            <cms>
                <rewrite>
                    <wysiwyg_images>Made_S3_Helper_Cms_Wysiwyg_Images</wysiwyg_images>
                </rewrite>
            </cms>
        </helpers>
    </global>
    <frontend>
        <secure_url>
            <made_s3>/made_s3</made_s3>
        </secure_url>
        <routers>
            <made_s3>
                <use>standard</use>
                <args>
                    <module>Made_S3</module>
                    <frontName>made_s3</frontName>
                </args>
            </made_s3>
        </routers>
        <events>
            <made_image_geturl>
                <observers>
                    <get_image_cdn_url>
                        <type>singleton</type>
                        <model>made_s3/observer</model>
                        <method>getImageCdnUrl</method>
                    </get_image_cdn_url>
                </observers>
            </made_image_geturl>
        </events>
    </frontend>
    <adminhtml>
        <layout>
            <updates>
                <made_s3>
                    <file>made/s3.xml</file>
                </made_s3>
            </updates>
        </layout>
    </adminhtml>
</config>